<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textEntryEditText"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:hint="Enter Text Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:maxLines="1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/hint_grey"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/text_entry_box"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="256dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <io.andrewedgar.softkeyboard.FullKeyboard
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/textEntryKeyBoard" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textEntryEditText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent">


    </io.andrewedgar.softkeyboard.FullKeyboard>

</androidx.constraintlayout.widget.ConstraintLayout>